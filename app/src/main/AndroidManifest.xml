<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs.androidautomation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.login.SignupActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.base.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.todo.tasks.TasksActivity"/>
        <activity android:name=".ui.todo.taskDetail.TaskDetailActivity"/>
        <activity android:name=".ui.todo.taskModify.AddEditTaskActivity"/>
        <activity android:name=".ui.todo.taskStatistics.StatisticsActivity"/>
    </application>

</manifest>